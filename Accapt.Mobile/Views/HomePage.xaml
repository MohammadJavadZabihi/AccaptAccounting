<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Accapt.Mobile.Views.HomePage"
             Title="HomePage" Loaded="ContentPage_Loaded">
    <ScrollView>
        <StackLayout x:Name="CardContainer" Padding="10">
            <!-- کادر جستجو با فونت فارسی -->
            <Entry x:Name="txtSearch" FontFamily="VazirFont" Placeholder="جستجو..." />

            <!-- دکمه بارگذاری داده‌ها با فونت فارسی -->
            <Button x:Name="btnLoad" Text="بارگذاری اطلاعات" Clicked="btnLoad_Clicked" FontFamily="VazirFont"/>
        </StackLayout>
    </ScrollView>
</ContentPage>
    