<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Accapt.Mobile.Views.HomePage"
             Loaded="ContentPage_Loaded" FlowDirection="RightToLeft" Title="صفحه اصلی"
             xmlns:Contlores="clr-namespace:Accapt.Mobile.Controls">
    <ContentPage.Background>
        <LinearGradientBrush>
            <GradientStop Color="#073d7f" Offset="0.1"/>
            <GradientStop Color="#6491DE" Offset="1.0"/>
        </LinearGradientBrush>
    </ContentPage.Background>
    <ScrollView>
        <StackLayout x:Name="CardContainer" Padding="10">
            <Button x:Name="btnLoad" Text="بارگذاری اطلاعات" Clicked="btnLoad_Clicked" Margin="10,20,10,0" Background="#00cc99" TextColor="WhiteSmoke"/>
        </StackLayout>
    </ScrollView>

</ContentPage>
    